---
import Layout from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations, getLocalizedPath } from '~/i18n/utils'

const lang = Astro.currentLocale || 'fr'
const t = getI18nTranslations(lang as 'fr' | 'en')
const pageSchema = createWebPageSchema({
  name: t.pages.contactPage.heroTitle,
  url: Astro.url.toString(),
  description: t.pages.contactPage.heroSubtitle,
})
---

<Layout
  title={`${t.pages.contactPage.heroTitle} â€“ LAOM`}
  description={t.pages.contactPage.heroSubtitle}
  seo={{
    ldJSON: pageSchema,
  }}
>
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">
        Contact
      </span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        {t.pages.contactPage.heroTitle}
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 max-w-3xl mx-auto leading-relaxed">
        {t.pages.contactPage.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-6">{t.pages.contactPage.introTitle}</h2>
      <p class="text-lg font-light text-black/70 leading-relaxed">{t.pages.contactPage.introDescription}</p>
    </div>
  </section>

  <!-- Ressources (avant contact) -->
  <section class="py-24 bg-white">
    <div class="max-w-3xl mx-auto px-10 sm:px-16 lg:px-24">
      <p class="text-lg font-light text-black/70 mb-10">{t.pages.contactPage.beforeContactIntro}</p>
      <ul class="space-y-6">
        {t.pages.contactPage.beforeContactItems.map((item) => {
          const isExternal = item.href.startsWith('http')
          const url = isExternal ? item.href : getLocalizedPath(item.href, lang as 'fr' | 'en')
          return (
            <li>
              <a
                href={url}
                class="text-lg font-light text-black hover:text-black/70 transition-colors underline underline-offset-4"
                {...(isExternal && { target: '_blank', rel: 'noopener noreferrer', 'aria-label': `${item.title} (opens in new tab)` })}
              >
                {item.title}
              </a>
              {'description' in item && item.description && (
                <p class="mt-2 text-base font-light text-black/60 leading-relaxed">{item.description}</p>
              )}
            </li>
          )
        })}
      </ul>
    </div>
  </section>

  <section class="py-24 bg-[#1a1a1a] text-white">
    <div class="max-w-4xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <a href="mailto:contact@laom.fr" class="block text-2xl md:text-3xl font-light hover:text-white/70 transition-colors">
        contact@laom.fr
      </a>
      <div class="mt-10 text-sm font-light text-white/60">
        <p class="uppercase tracking-[0.2em] text-xs text-white/40 mb-2">{t.pages.contactPage.responseTitle}</p>
        <p>{t.pages.contactPage.responseDescription}</p>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#2d5016] text-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <h2 class="text-3xl md:text-4xl font-light mb-4">{t.pages.contactPage.ctaTitle}</h2>
      <p class="text-lg font-light text-white/80 mb-8">{t.pages.contactPage.ctaDescription}</p>
      <a
        href={getLocalizedPath('/newsletter', lang as 'fr' | 'en')}
        class="inline-flex items-center justify-center rounded-sm bg-white text-black px-8 py-3 text-xs tracking-[0.25em] uppercase hover:bg-white/90 transition-colors"
      >
        {t.pages.contactPage.ctaButton}
      </a>
    </div>
  </section>
</Layout>
