---
import Layout from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'

const pageSchema = createWebPageSchema({
  name: 'Grand Shambala',
  url: Astro.url.toString(),
  description:
    'Construction log for the load-bearing straw building: foundations, earthworks, straw structure, and the south facade.',
})
---

<Layout
  title="Grand Shambala â€“ LAOM"
  description="Construction log for the load-bearing straw building: foundations, earthworks, straw structure, and the south facade."
  seo={{ ldJSON: pageSchema }}
>
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">Load-bearing straw building</span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        Grand Shambala
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 leading-relaxed">
        Four key stages of a collective build. It all starts with an idea.
      </p>
    </div>
  </section>

  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-4xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="space-y-6">
        {[
          'Foundations',
          'Earthworks',
          'Load-bearing straw',
          'South facade',
        ].map((title) => (
          <article class="border border-black/10 bg-white p-6 lg:p-8 shadow-sm">
            <h2 class="text-2xl font-light text-black mb-3">{title}</h2>
            <p class="text-sm font-light text-black/60 leading-relaxed">It all starts with an idea.</p>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
