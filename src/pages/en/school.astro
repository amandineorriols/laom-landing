---
import Layout from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations, getLocalizedPath } from '~/i18n/utils'

const lang = 'en' as const
const t = getI18nTranslations(lang)
const pageSchema = createWebPageSchema({
  name: t.pages.school.heroTitle,
  url: Astro.url.toString(),
  description: t.pages.school.heroSubtitle,
})
---

<Layout
  title={`${t.pages.school.heroTitle} – LAOM`}
  description={t.pages.school.heroSubtitle}
  seo={{
    ldJSON: pageSchema,
  }}
>
  <!-- Hero -->
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">
        Training
      </span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        {t.pages.school.heroTitle}
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 max-w-3xl mx-auto leading-relaxed">
        {t.pages.school.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Problem -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.school.problemTitle}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        {t.pages.school.problems.map((item) => (
          <div class="border border-black/10 p-6 bg-white shadow-sm">
            <p class="text-lg font-light text-black/70">{item}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Solution -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24 grid gap-10 lg:grid-cols-[1.1fr,0.9fr] items-start">
      <div>
        <h2 class="text-3xl md:text-4xl font-light text-black mb-6">{t.pages.school.solutionTitle}</h2>
        <p class="text-lg font-light text-black/70 leading-relaxed">
          {t.pages.school.solutionDescription}
        </p>
      </div>
      <div class="border border-black/10 bg-[#eef4ea] p-8 lg:p-10">
        <p class="text-xs tracking-[0.3em] uppercase text-black/50 mb-6">LAOM SCHOOL</p>
        <p class="text-base font-light text-black/70 leading-relaxed">
          {t.pages.school.formatPoints[0]}
        </p>
        <div class="mt-6 h-px w-10 bg-black/20"></div>
        <p class="mt-6 text-sm font-light text-black/60 leading-relaxed">
          {t.pages.school.formatPoints[1]}
        </p>
      </div>
    </div>
  </section>

  <!-- Program -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.school.programTitle}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {t.pages.school.program.map((item, index) => (
          <div class="flex items-start gap-4">
            <span class="text-black/40 text-sm tracking-[0.2em]">{String(index + 1).padStart(2, '0')}</span>
            <p class="text-lg font-light text-black/70">{item}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.school.whyTitle}</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {t.pages.school.whyPoints.map((item) => (
          <div class="border border-black/10 bg-white p-6 lg:p-8 shadow-sm">
            <p class="text-lg font-light text-black/70 leading-relaxed">{item}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Format -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.school.formatTitle}</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {t.pages.school.formatPoints.map((item) => (
          <div class="flex items-start gap-4">
            <span class="text-black/30 text-sm tracking-[0.2em]">•</span>
            <p class="text-lg font-light text-black/70">{item}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Audience -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.school.audienceTitle}</h2>
      <ul class="space-y-4">
        {t.pages.school.audience.map((item) => (
          <li class="text-lg font-light text-black/70">• {item}</li>
        ))}
      </ul>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#2d5016] text-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <h2 class="text-3xl md:text-4xl font-light mb-4">{t.pages.school.ctaTitle}</h2>
      <p class="text-lg font-light text-white/80 mb-8">{t.pages.school.ctaDescription}</p>
      <a
        href={getLocalizedPath('/contact/', lang as 'fr' | 'en')}
        class="inline-flex items-center justify-center rounded-sm bg-white text-black px-8 py-3 text-xs tracking-[0.25em] uppercase hover:bg-white/90 transition-colors"
      >
        {t.pages.school.ctaButton}
      </a>
    </div>
  </section>
</Layout>
