---
import Layout from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations, getLocalizedPath } from '~/i18n/utils'

const lang = 'en' as const
const t = getI18nTranslations(lang)
const pageSchema = createWebPageSchema({
  name: t.pages.eventsPage.heroTitle,
  url: Astro.url.toString(),
  description: t.pages.eventsPage.heroSubtitle,
})

const eventImages = [
  '/images/event-danse-silence.png',
  '/images/event-rencontre-perspective.jpg',
  '/images/event-desirs-aventure.jpg',
  '/images/event-fyneo.jpg',
]
const events = t.events.items.map((item, index) => ({
  ...item,
  image: eventImages[index] || '/images/event-fyneo.jpg',
}))
---

<Layout
  title={`${t.pages.eventsPage.heroTitle} â€“ LAOM`}
  description={t.pages.eventsPage.heroSubtitle}
  seo={{
    ldJSON: pageSchema,
  }}
>
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">
        Agenda
      </span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        {t.pages.eventsPage.heroTitle}
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 max-w-3xl mx-auto leading-relaxed">
        {t.pages.eventsPage.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24 grid gap-12 lg:grid-cols-[1.1fr,0.9fr] items-start">
      <div>
        <h2 class="text-3xl md:text-4xl font-light text-black mb-6">{t.pages.eventsPage.introTitle}</h2>
        <p class="text-lg font-light text-black/70 leading-relaxed">{t.pages.eventsPage.introDescription}</p>
      </div>
      <div class="border border-black/10 bg-white p-8 lg:p-10 shadow-sm">
        <p class="text-xs tracking-[0.3em] uppercase text-black/50 mb-6">LAOM</p>
        <p class="text-base font-light text-black/70 leading-relaxed">
          {t.pages.eventsPage.hostPoints[0]}
        </p>
        <div class="mt-6 h-px w-10 bg-black/20"></div>
        <p class="mt-6 text-sm font-light text-black/60 leading-relaxed">
          {t.pages.eventsPage.hostPoints[1]}
        </p>
      </div>
    </div>
  </section>

  <!-- Events -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="grid gap-6">
        {events.map((event) => (
          <div class="group border border-black/10 bg-white overflow-hidden flex flex-col md:flex-row">
            <div class="md:w-64 lg:w-72 bg-neutral-100">
              <img src={event.image} alt={event.title} class="w-full h-full object-cover" loading="lazy" />
            </div>
            <div class="flex-1 p-6 md:p-8 flex flex-col justify-between">
              <div>
                <p class="text-xs font-light tracking-widest uppercase text-black/50 mb-3">{event.date}</p>
                <h3 class="text-2xl font-light mb-3 group-hover:translate-x-1 transition-transform duration-300">
                  {event.title}
                </h3>
                <p class="text-sm font-light text-black/60">{event.description}</p>
              </div>
              <div class="mt-6 text-xs tracking-widest uppercase text-black/40 group-hover:text-black transition-colors">
                {t.events.cta}
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Host -->
  <section class="py-24 bg-[#eef4ea]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.eventsPage.hostTitle}</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {t.pages.eventsPage.hostPoints.map((point) => (
          <div class="border border-black/10 bg-white/80 p-6 lg:p-8">
            <p class="text-lg font-light text-black/70 leading-relaxed">{point}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#2d5016] text-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <h2 class="text-3xl md:text-4xl font-light mb-4">{t.pages.eventsPage.ctaTitle}</h2>
      <p class="text-lg font-light text-white/80 mb-8">{t.pages.eventsPage.ctaDescription}</p>
      <a
        href={getLocalizedPath('/contact/', lang)}
        class="inline-flex items-center justify-center rounded-sm bg-white text-black px-8 py-3 text-xs tracking-[0.25em] uppercase hover:bg-white/90 transition-colors"
      >
        {t.pages.eventsPage.ctaButton}
      </a>
    </div>
  </section>
</Layout>
