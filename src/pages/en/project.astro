---
import Layout from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations, getLocalizedPath } from '~/i18n/utils'

const lang = 'en' as const
const t = getI18nTranslations(lang)
const pageSchema = createWebPageSchema({
  name: t.pages.project.heroTitle,
  url: Astro.url.toString(),
  description: t.pages.project.heroSubtitle,
})
---

<Layout
  title={`${t.pages.project.heroTitle} – LAOM`}
  description={t.pages.project.heroSubtitle}
  seo={{
    ldJSON: pageSchema,
  }}
>
  <!-- Hero -->
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">
        LAOM
      </span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        {t.pages.project.heroTitle}
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 max-w-3xl mx-auto leading-relaxed">
        {t.pages.project.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Intro -->
  <section class="py-20 bg-[#faf9f6]">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24">
      <p class="text-lg md:text-xl font-light text-black/80 leading-relaxed">
        {t.pages.project.intro}
      </p>
    </div>
  </section>

  <!-- Story -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="grid gap-12 lg:grid-cols-[1.2fr,0.8fr] items-start">
        <div>
          <h2 class="text-3xl md:text-4xl font-light text-black mb-8">{t.pages.project.storyTitle}</h2>
          <div class="space-y-6 text-lg font-light text-black/75 leading-relaxed">
            {t.pages.project.storyParagraphs.map((paragraph) => (
              <p>{paragraph}</p>
            ))}
          </div>
        </div>
        <div class="rounded-sm border border-black/10 bg-[#f3efe7] p-8 lg:p-10">
          <p class="text-xs tracking-[0.3em] uppercase text-black/50 mb-6">DNA</p>
          <p class="text-lg font-light text-black/80 leading-relaxed">
            “{t.pages.project.philosophyPoints[0]}”
          </p>
          <div class="mt-6 h-px w-10 bg-black/20"></div>
          <p class="mt-6 text-sm font-light text-black/60 leading-relaxed">
            {t.pages.project.philosophyPoints[1]}
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.project.statsTitle}</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {t.pages.project.stats.map((item) => (
          <div class="border border-black/10 p-6 lg:p-8 bg-white shadow-sm">
            <p class="text-lg font-light text-black/80">{item}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Model -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-6">{t.pages.project.modelTitle}</h2>
      <p class="text-lg font-light text-black/70 leading-relaxed max-w-4xl">
        {t.pages.project.modelDescription}
      </p>
    </div>
  </section>

  <!-- Philosophy -->
  <section class="py-24 bg-[#eef4ea]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.project.philosophyTitle}</h2>
      <div class="grid gap-6 md:grid-cols-2">
        {t.pages.project.philosophyPoints.map((point) => (
          <div class="bg-white/80 border border-black/10 p-6 lg:p-8 shadow-sm">
            <p class="text-lg font-light text-black/70 leading-relaxed">{point}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Timeline -->
  <section class="py-24 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.project.timelineTitle}</h2>
      <div class="space-y-6 border-l border-black/10 pl-6">
        {t.pages.project.timeline.map((step) => (
          <div class="relative">
            <span class="absolute -left-[9px] top-2 h-3 w-3 rounded-full bg-black/40"></span>
            <p class="text-lg font-light text-black/70">{step}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Construction blogs -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="rounded-lg border border-black/10 bg-white p-6 lg:p-8">
        <h2 class="text-2xl md:text-3xl font-light text-black mb-3">{t.pages.project.constructionBlogsTitle}</h2>
        <p class="text-base font-light text-black/70 mb-4">{t.pages.project.constructionBlogsIntro}</p>
        <ul class="space-y-2">
          {t.pages.project.constructionBlogs.map((item) => {
            const href = getLocalizedPath(`/blog/${item.slugEn}/`, lang)
            return (
              <li>
                <a href={href} class="text-lg font-light text-black/80 hover:text-[#2d5016] transition-colors underline underline-offset-4">
                  {item.labelEn}
                </a>
              </li>
            )
          })}
        </ul>
      </div>
    </div>
  </section>

  <!-- Team -->
  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-light text-black mb-10">{t.pages.project.teamTitle}</h2>
      <div class="grid gap-6 md:grid-cols-3">
        {t.pages.project.teamMembers.map((member) => (
          <div class="border border-black/10 bg-white p-6 lg:p-8 shadow-sm">
            <p class="text-xs tracking-[0.25em] uppercase text-black/40 mb-3">{member.role}</p>
            <h3 class="text-xl font-light text-black mb-4">{member.name}</h3>
            <p class="text-sm font-light text-black/60 leading-relaxed">{member.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-20 bg-[#2d5016] text-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <h2 class="text-3xl md:text-4xl font-light mb-4">{t.pages.project.ctaTitle}</h2>
      <p class="text-lg font-light text-white/80 mb-8">{t.pages.project.ctaDescription}</p>
      <a
        href={getLocalizedPath('/mentorat/', lang as 'fr' | 'en')}
        class="inline-flex items-center justify-center rounded-sm bg-white text-black px-8 py-3 text-xs tracking-[0.25em] uppercase hover:bg-white/90 transition-colors"
      >
        {t.pages.project.ctaButton}
      </a>
    </div>
  </section>
</Layout>
