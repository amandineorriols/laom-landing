---
import Layout from '~/layouts/Layout.astro'
import Hero from '~/components/Hero.astro'
import { createWebSiteSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations } from '~/i18n/utils'

const lang = 'en' as const
const t = getI18nTranslations(lang)
const siteSchema = createWebSiteSchema({
  url: Astro.site?.toString() || 'https://laom.com',
  description: t.site.description,
})

const eventImages = [
  '/images/event-danse-silence.png',
  '/images/event-rencontre-perspective.jpg',
  '/images/event-desirs-aventure.jpg',
  '/images/event-fyneo.jpg',
]
const events = t.events.items.map((item, index) => ({
  ...item,
  image: eventImages[index] || '/images/event-fyneo.jpg',
}))

const trustLogos = [
  { src: '/images/logo-csc.webp', alt: t.trust.logos[0] },
  { src: '/images/logo-vanlifest.jpg', alt: t.trust.logos[1] },
  { src: '/images/logo-image01.png', alt: t.trust.logos[2] },
]

const testimonialVideoSrc = '/videos/laom-testimonial/master.m3u8'
---

<Layout 
  title={`${t.site.name} ‚Äì ${t.site.tagline}`}
  description={t.site.description}
  seo={{
    ldJSON: siteSchema,
  }}
>
  <Hero />
  
  <!-- Trust Section -->
  <section class="py-16 lg:py-20 bg-white">
    <div class="max-w-6xl mx-auto px-8 sm:px-12 lg:px-20">
      <p class="text-center text-xs tracking-[0.25em] uppercase text-black/40 mb-10">
        {t.trust.title}
      </p>
      <div class="flex flex-wrap items-center justify-center gap-10 md:gap-16 opacity-80">
        {trustLogos.map((logo) => (
          <img
            src={logo.src}
            alt={logo.alt}
            class="h-10 md:h-12 w-auto object-contain grayscale hover:grayscale-0 transition duration-500"
            loading="lazy"
          />
        ))}
      </div>
    </div>
  </section>
  
  <!-- About Section - Editorial Style -->
  <section id="experience" class="py-32 lg:py-40 bg-white overflow-hidden">
    <div class="max-w-7xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="flex flex-col lg:flex-row items-center gap-16 lg:gap-24">
        <!-- Text Content -->
        <div class="lg:w-1/2 opacity-0" animate-fade-in-up>
          <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">
            The Concept
          </span>
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-light text-black mb-8 leading-tight">
            {t.about.title}
          </h2>
          <p class="text-xl font-light text-black/60 mb-8 leading-relaxed">
            {t.about.subtitle}
          </p>
          <div class="w-12 h-[1px] bg-black/20 mb-8"></div>
          <div class="space-y-6 text-lg font-light text-black/80 leading-relaxed text-left">
            <p>{t.about.description}</p>
            <p>{t.about.community}</p>
            <p>{t.about.location}</p>
          </div>
        </div>
        
        <!-- Image/Visual -->
        <div class="lg:w-1/2 relative opacity-0 delay-200" animate-fade-in-up>
          <div class="aspect-[4/5] bg-neutral-100 rounded-sm overflow-hidden relative">
            <img src="/images/about.jpg" alt={t.about.imageAlt} class="w-full h-full object-cover" loading="lazy" />
            <div class="absolute bottom-8 left-8 right-8 bg-white/90 backdrop-blur-sm p-6 rounded-sm">
              <p class="text-sm font-light text-black/80 leading-relaxed italic">
                "{t.about.highlight}"
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section - Asymmetric Grid -->
  <section class="py-32 lg:py-40 bg-[#faf9f6]"> <!-- Off-white/Cream background -->
    <div class="max-w-7xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="text-center max-w-3xl mx-auto mb-24 lg:mb-32 opacity-0" animate-fade-in-up>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-black mb-8 tracking-tight">The LAOM Experience</h2>
        <div class="w-16 h-[1px] bg-black/10 mx-auto mb-8"></div>
        <p class="text-black/50 font-light text-lg lg:text-xl leading-relaxed">A perfect balance between nature, comfort, and community.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-px bg-black/5 border border-black/5 shadow-sm">
        <!-- Feature 1 -->
        <div class="bg-white p-12 lg:p-16 flex flex-col items-center text-center group hover:bg-[#faf9f6] transition-colors duration-500">
          <div class="text-5xl mb-8 text-[#2d5016] opacity-80 group-hover:scale-110 transition-transform duration-500">üå≤</div>
          <h3 class="text-sm font-normal tracking-[0.2em] text-black mb-4 uppercase">Nature</h3>
          <p class="text-black/60 font-light leading-relaxed text-sm">{t.about.features.space}</p>
        </div>
        
        <!-- Feature 2 -->
        <div class="bg-white p-12 lg:p-16 flex flex-col items-center text-center group hover:bg-[#faf9f6] transition-colors duration-500">
          <div class="text-5xl mb-8 text-[#2d5016] opacity-80 group-hover:scale-110 transition-transform duration-500">üõèÔ∏è</div>
          <h3 class="text-sm font-normal tracking-[0.2em] text-black mb-4 uppercase">Rest</h3>
          <p class="text-black/60 font-light leading-relaxed text-sm">{t.about.features.rooms}</p>
        </div>

        <!-- Feature 3 -->
        <div class="bg-white p-12 lg:p-16 flex flex-col items-center text-center group hover:bg-[#faf9f6] transition-colors duration-500">
          <div class="text-5xl mb-8 text-[#2d5016] opacity-80 group-hover:scale-110 transition-transform duration-500">üç≤</div>
          <h3 class="text-sm font-normal tracking-[0.2em] text-black mb-4 uppercase">Sharing</h3>
          <p class="text-black/60 font-light leading-relaxed text-sm">{t.about.features.kitchen}</p>
        </div>

        <!-- Feature 4 -->
        <div class="bg-white p-12 lg:p-16 flex flex-col items-center text-center group hover:bg-[#faf9f6] transition-colors duration-500">
          <div class="text-5xl mb-8 text-[#2d5016] opacity-80 group-hover:scale-110 transition-transform duration-500">üß†</div>
          <h3 class="text-sm font-normal tracking-[0.2em] text-black mb-4 uppercase">Creation</h3>
          <p class="text-black/60 font-light leading-relaxed text-sm">{t.about.features.workspace}</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Location/Nature Immersion - Full Width Parallax-like -->
  <section class="relative py-40 flex items-center justify-center bg-[#2d5016] overflow-hidden">
    <div class="absolute inset-0 opacity-20 bg-[url('/images/forest-bg.jpg')] bg-cover bg-fixed bg-center"></div> <!-- Placeholder for forest image -->
    <div class="relative z-10 max-w-4xl mx-auto px-10 sm:px-16 lg:px-24 text-center text-white opacity-0" animate-fade-in-up>
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-light mb-8 tracking-tight">Wild Immersion</h2>
      <p class="text-xl md:text-2xl font-light opacity-90 leading-relaxed max-w-2xl mx-auto">
        {t.about.location}
      </p>
    </div>
  </section>

  <!-- Events Section - Calendar Style -->
  <section id="events" class="py-32 px-10 sm:px-16 lg:px-24 bg-white">
    <div class="max-w-5xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-end mb-16 opacity-0" animate-fade-in-up>
        <div>
          <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-4">Agenda</span>
          <h2 class="text-4xl md:text-5xl font-light text-black">{t.events.title}</h2>
        </div>
        <div class="mt-6 md:mt-0">
          <a href="#" class="text-sm border-b border-black pb-1 hover:opacity-50 transition-opacity">View full calendar</a>
        </div>
      </div>

      <!-- Events List -->
      <div class="space-y-6 border-t border-black/10 pt-8 opacity-0" animate-fade-in-up>
        {events.map((event) => (
          <div class="group border border-black/10 rounded-sm overflow-hidden hover:shadow-lg transition-shadow bg-white">
            <div class="flex flex-col md:flex-row">
              <div class="md:w-56 lg:w-72 bg-neutral-100">
                <img src={event.image} alt={event.title} class="h-full w-full object-cover" loading="lazy" />
              </div>
              <div class="flex-1 p-6 md:p-8 flex flex-col justify-between">
                <div>
                  <p class="text-xs font-light tracking-widest uppercase text-black/50 mb-3">{event.date}</p>
                  <h3 class="text-2xl font-light mb-3 group-hover:translate-x-1 transition-transform duration-300">
                    {event.title}
                  </h3>
                  <p class="text-sm font-light text-black/60">{event.description}</p>
                </div>
                <div class="mt-6 text-xs tracking-widest uppercase text-black/40 group-hover:text-black transition-colors">
                  {t.events.cta}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Testimonials + Video -->
  <section class="py-32 lg:py-40 bg-[#faf9f6]">
    <div class="max-w-5xl mx-auto px-8 sm:px-12 lg:px-20 text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-light text-black mb-6">{t.testimonials.title}</h2>
      <p class="text-black/60 font-light text-lg mb-12">{t.testimonials.subtitle}</p>
      <div class="bg-white border border-black/10 rounded-sm overflow-hidden shadow-sm">
        <div class="aspect-[9/16] bg-black">
          <video
            id="testimonial-video"
            class="w-full h-full object-cover"
            controls
            playsinline
            preload="metadata"
            poster="/images/hero-bg.jpg"
            data-src={testimonialVideoSrc}
          >
            <source src={testimonialVideoSrc} type="application/vnd.apple.mpegurl" />
          </video>
        </div>
        <div class="p-6 text-sm text-black/60">{t.testimonials.caption}</div>
      </div>
    </div>
  </section>

  <script
    is:inline
    src="https://cdn.jsdelivr.net/npm/hls.js@1.5.8/dist/hls.min.js"
    crossorigin="anonymous"
  ></script>
  <script is:inline>
    const video = document.getElementById('testimonial-video')
    if (video && window.Hls && window.Hls.isSupported()) {
      const hls = new window.Hls()
      hls.loadSource(video.dataset.src)
      hls.attachMedia(video)
    } else if (video && video.canPlayType('application/vnd.apple.mpegurl')) {
      video.src = video.dataset.src
    }
  </script>

  <!-- Contact Section - Minimalist -->
  <section id="contact" class="py-32 lg:py-40 px-10 sm:px-16 lg:px-24 bg-[#1a1a1a] text-white">
    <div class="max-w-4xl mx-auto text-center opacity-0" animate-fade-in-up>
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-white/40 mb-8">
        Join Us
      </span>
      <h2 class="text-5xl md:text-6xl lg:text-7xl font-light mb-12 tracking-tight">
        Start Your Journey
      </h2>
      
      <div class="flex flex-col items-center mb-12">
        <img
          src="/images/charly-aubert.jpg"
          alt={t.contact.photoAlt}
          class="h-24 w-24 rounded-full object-cover border border-white/20"
          loading="lazy"
        />
        <p class="mt-6 text-xs tracking-widest uppercase text-white/40">{t.contact.development}</p>
        <p class="text-xl font-light">{t.contact.name}</p>
      </div>

      <div class="flex flex-col items-center gap-2 mb-16">
        <a href={`mailto:${t.contact.email}`} class="text-xl font-light hover:text-[#d4af37] transition-colors">{t.contact.email}</a>
        <a href={`tel:${t.contact.phone.replace(/\s/g, '')}`} class="text-xl font-light hover:text-[#d4af37] transition-colors">{t.contact.phone}</a>
      </div>

      <a href={`mailto:${t.contact.email}`} class="inline-block px-12 py-5 border border-white/30 hover:border-white hover:bg-white hover:text-black transition-all duration-500 uppercase tracking-[0.15em] text-sm">
        Get in touch
      </a>
    </div>
  </section>
</Layout>
