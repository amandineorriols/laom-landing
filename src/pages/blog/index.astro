---
import Layout from '~/layouts/Layout.astro'
import { getCollection } from 'astro:content'
import { createWebPageSchema } from '~/utils/schema'
import { getTranslations } from '~/i18n/utils'

const lang = Astro.currentLocale || 'fr'
const t = getTranslations(lang as 'fr' | 'en')

// Get all blog posts, filter by locale and draft status
const allPosts = await getCollection('blog', ({ data }) => {
  return data.locale === lang && !data.draft
})

// Sort by date (newest first)
const posts = allPosts.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())

const pageSchema = createWebPageSchema({
  name: t.blog.title,
  url: Astro.url.toString(),
  description: t.blog.description,
})
---

<Layout
  title={`${t.blog.title} – LAOM`}
  description={t.blog.description}
  seo={{ ldJSON: pageSchema }}
>
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">Blog</span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        {t.blog.title}
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 leading-relaxed">
        {t.blog.description}
      </p>
    </div>
  </section>

  {posts.length === 0 ? (
    <section class="py-24 bg-[#faf9f6]">
      <div class="max-w-4xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
        <p class="text-lg font-light text-black/60">{t.blog.empty}</p>
      </div>
    </section>
  ) : (
    <section class="py-24 bg-[#faf9f6]">
      <div class="max-w-4xl mx-auto px-10 sm:px-16 lg:px-24 space-y-6">
        {posts.map((post) => {
          const formattedDate = new Date(post.data.pubDate).toLocaleDateString(lang === 'fr' ? 'fr-FR' : 'en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric',
          })
          return (
            <article class="border border-black/10 bg-white p-6 lg:p-8 shadow-sm hover:shadow-md transition-shadow duration-300">
              <div class="flex flex-col md:flex-row md:items-start gap-6">
                {post.data.heroImage && (
                  <div class="md:w-48 lg:w-64 flex-shrink-0">
                    <img
                      src={post.data.heroImage}
                      alt={post.data.title}
                      class="w-full h-48 md:h-full object-cover rounded-sm"
                      loading="lazy"
                    />
                  </div>
                )}
                <div class="flex-1">
                  <p class="text-xs font-light tracking-widest uppercase text-black/50 mb-3">
                    {formattedDate}
                  </p>
                  <h2 class="text-2xl md:text-3xl font-light text-black mb-3 hover:text-black/70 transition-colors">
                    <a href={`/blog/${post.slug}/`}>{post.data.title}</a>
                  </h2>
                  <p class="text-sm font-light text-black/60 leading-relaxed mb-4">
                    {post.data.description}
                  </p>
                  {post.data.tags && post.data.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {post.data.tags.map((tag) => (
                        <span class="text-xs px-3 py-1 bg-black/5 text-black/60 rounded-sm font-light">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )}
                  <a
                    href={`/blog/${post.slug}/`}
                    class="inline-block text-xs tracking-widest uppercase text-black/40 hover:text-black transition-colors border-b border-transparent hover:border-black/20"
                  >
                    {t.blog.readMore} →
                  </a>
                </div>
              </div>
            </article>
          )
        })}
      </div>
    </section>
  )}
</Layout>
