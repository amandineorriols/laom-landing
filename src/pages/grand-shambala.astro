---
import Layout from '~/layouts/Layout.astro'
import { createWebPageSchema } from '~/utils/schema'

const pageSchema = createWebPageSchema({
  name: 'Grand Shambala',
  url: Astro.url.toString(),
  description:
    'Journal de chantier du bâtiment paille porteuse : fondations, terrassement, structure paille et façade sud.',
})

const steps = [
  {
    title: 'Les fondations',
    image: '/images/laom/grand-shambala/capture-d-cran-2023-10-18-23-19-42-dee55f5a.webp',
    alt: 'Fondations du Grand Shambala',
  },
  {
    title: 'Le terrassement',
    image: '/images/laom/grand-shambala/capture-d-cran-2023-10-19-00-16-12-0775c6b7.webp',
    alt: 'Terrassement du Grand Shambala',
  },
  {
    title: 'Paille porteuse',
    image: '/images/laom/grand-shambala/capture-d-cran-2023-10-19-00-20-46-d39bfbf4.webp',
    alt: 'Structure paille porteuse',
  },
  {
    title: 'Façade sud',
    image: '/images/laom/grand-shambala/capture-d-cran-2023-10-19-00-23-08-c4b68ad3.webp',
    alt: 'Façade sud du Grand Shambala',
  },
]
---

<Layout
  title="Grand Shambala – LAOM"
  description="Journal de chantier du bâtiment paille porteuse : fondations, terrassement, structure paille et façade sud."
  seo={{ ldJSON: pageSchema }}
>
  <section class="py-32 lg:py-40 bg-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-black/40 mb-6">Bâtiment paille porteuse</span>
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-light text-black mb-6 tracking-tight">
        Grand Shambala
      </h1>
      <p class="text-xl md:text-2xl font-light text-black/60 leading-relaxed">
        Quatre étapes clés d’un chantier collectif. Tout commence par une idée.
      </p>
    </div>
  </section>

  <section class="py-24 bg-[#faf9f6]">
    <div class="max-w-4xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="space-y-6">
        {steps.map((step) => (
          <article class="border border-black/10 bg-white p-6 lg:p-8 shadow-sm">
            <img
              src={step.image}
              alt={step.alt}
              class="h-56 w-full rounded-sm object-cover border border-black/10 mb-5"
              loading="lazy"
            />
            <h2 class="text-2xl font-light text-black mb-3">{step.title}</h2>
            <p class="text-sm font-light text-black/60 leading-relaxed">Tout commence par une idée.</p>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>
