---
import Layout from '~/layouts/Layout.astro'
import Hero from '~/components/Hero.astro'
import NewsletterBanner from '~/components/NewsletterBanner.astro'
import { createWebSiteSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations, getLocalizedPath } from '~/i18n/utils'

const lang = 'fr'
const t = getI18nTranslations(lang as 'fr' | 'en')
const siteSchema = createWebSiteSchema({
  url: Astro.site?.toString() || 'https://laom.com',
  description: t.site.description,
})

const eventImages = [
  '/images/event-danse-silence.png',
  '/images/event-rencontre-perspective.jpg',
  '/images/event-desirs-aventure.jpg',
  '/images/event-fyneo.jpg',
]
const events = t.events.items.map((item, index) => ({
  ...item,
  image: eventImages[index] || '/images/event-fyneo.jpg',
}))

const spaceImages = [
  'https://images.unsplash.com/photo-1512621776951-a57141f2eefd?w=420&h=560&fit=crop&q=85', // Guinguette Restauration - healthy fresh vegetables
  'https://images.unsplash.com/photo-1522771739844-6a9f6d5f14af?w=420&h=560&fit=crop&q=85', // Les chambres (fallback ; remplacer par /images/laom/chambres.webp quand dispo)
  '/images/laom/tipis.webp', // Tipis - portrait format, cropped on the right, optimized WebP
  '/images/laom/salle-de-pratique.webp', // Salle de pratique - portrait format, cropped on the right, optimized WebP
  '/images/laom/planification/agri-1-0246e509.webp', // Jardin
  'https://images.unsplash.com/photo-1521017432531-fbd92d768814?w=420&h=560&fit=crop&q=85', // Espace de vie partagé - people socializing in a cafe
  'https://images.unsplash.com/photo-1497366811353-6870744d04b2?w=420&h=560&fit=crop&q=85', // Coworking – tables, laptops, people, natural light
]
const spaces = t.home.ourSpaces.items.map((item, i) => ({ ...item, image: spaceImages[i] || spaceImages[0] }))

---

<Layout 
  title={`${t.site.name} – ${t.site.tagline}`}
  description={t.site.description}
  seo={{
    ldJSON: siteSchema,
  }}
>
  <Hero />

  <!-- Intro Section – Citadel Garden style -->
  <section class="py-12 md:py-16 bg-[#F3EEDC]">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center opacity-0" animate-fade-in-up>
      <h2 class="text-5xl md:text-6xl lg:text-7xl font-normal tracking-tight text-black mb-8 leading-tight">
        {t.home.intro.title}
      </h2>
      <p class="text-xl md:text-2xl font-normal text-black/70 mb-12 max-w-3xl mx-auto">
        {t.home.intro.tagline}
      </p>
      <div class="space-y-6 text-lg md:text-xl font-normal text-black/80 leading-relaxed text-left max-w-3xl mx-auto">
        {t.home.intro.paragraphs.map((p) => (
          <p>{p}</p>
        ))}
      </div>
      <a
        href={getLocalizedPath('/project/', lang as 'fr' | 'en')}
        class="inline-block mt-12 text-base text-black/60 hover:text-black transition-colors font-normal underline underline-offset-4"
      >
        {t.home.intro.cta}
      </a>
    </div>
  </section>

  <NewsletterBanner />

  <!-- Immersion Signature Section - EN MOUVEMENT – Citadel Garden style -->
  <section id="experience" class="py-24 md:py-32 bg-[#F3EEDC] overflow-hidden">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="flex flex-col lg:flex-row gap-12 lg:gap-16 items-start">
        <!-- Image -->
        <div class="w-full lg:w-96 flex-shrink-0 opacity-0 delay-200" animate-fade-in-up>
          <div class="aspect-[3/4] bg-neutral-100 overflow-hidden rounded-sm">
            <img
              src="/images/laom/immersion-mouvement.webp"
              alt={t.home.immersionSignature.imageAlt}
              class="w-full h-full object-cover rounded-sm"
              loading="lazy"
              width="900"
              height="1200"
            />
          </div>
        </div>
        
        <!-- Text Content -->
        <div class="flex-1 opacity-0" animate-fade-in-up>
          <h2 class="text-4xl md:text-5xl lg:text-6xl font-normal text-black mb-6 leading-tight tracking-tight">
            {t.home.immersionSignature.title}
          </h2>
          <p class="text-xl md:text-2xl font-normal text-black/70 mb-8 leading-relaxed">
            {t.home.immersionSignature.subtitle}
          </p>
          <div class="space-y-5 text-lg font-normal text-black/80 leading-relaxed">
            {t.home.immersionSignature.paragraphs.map((p) => (
              <p>{p}</p>
            ))}
          </div>
          <a
            href={getLocalizedPath('/events/', lang as 'fr' | 'en')}
            class="inline-block mt-10 text-base text-black/60 hover:text-black transition-colors font-normal underline underline-offset-4"
          >
            {t.home.immersionSignature.cta}
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Nos Espaces – Citadel Garden style -->
  <section id="spaces" class="py-24 md:py-32 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-normal text-black tracking-tight text-center mb-16 opacity-0" animate-fade-in-up>
        {t.home.ourSpaces.sectionTitle}
      </h2>
    </div>
    <div class="relative">
      <button
        type="button"
        id="spaces-prev"
        class="spaces-arrow absolute left-2 md:left-4 top-1/2 -translate-y-1/2 z-10 w-9 h-9 rounded-full border border-black/20 bg-[#F3EEDC]/90 flex items-center justify-center text-black/60 hover:bg-[#F3EEDC] hover:border-black/40 hover:text-black transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-black/30"
        aria-label="Espace précédent"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" /></svg>
      </button>
      <button
        type="button"
        id="spaces-next"
        class="spaces-arrow absolute right-2 md:right-4 top-1/2 -translate-y-1/2 z-10 w-9 h-9 rounded-full border border-black/20 bg-[#F3EEDC]/90 flex items-center justify-center text-black/60 hover:bg-[#F3EEDC] hover:border-black/40 hover:text-black transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-black/30"
        aria-label="Espace suivant"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </button>
      <div id="spaces-scroll" class="spaces-scroll overflow-x-auto overflow-y-hidden scroll-smooth snap-x snap-mandatory" style="-webkit-overflow-scrolling: touch;">
        <div class="flex gap-6 pl-10 sm:pl-16 lg:pl-24 pr-14 sm:pr-24 lg:pr-36 py-2 min-w-max">
          {spaces.map((space, i) => (
            <article class="spaces-card flex-shrink-0 w-[260px] sm:w-[280px] snap-start opacity-0" animate-fade-in-up style={`animation-delay: ${i * 80}ms`}>
              <div class="aspect-[3/4] bg-neutral-100 overflow-hidden rounded-sm">
                <img
                  src={space.image}
                  alt={(space as { imageAlt?: string }).imageAlt ?? space.title}
                  class={`w-full h-full object-cover rounded-sm ${i === 2 ? 'object-left' : i === 3 ? 'object-right' : ''}`}
                  loading="lazy"
                />
              </div>
              <div class="mt-5 px-2 sm:px-3">
                <h3 class="text-base font-normal tracking-wide text-black mb-3 uppercase">
                  {space.title}
                </h3>
                <p class="text-sm font-normal text-black/70 leading-relaxed">
                  {space.description}
                  {(space as { note?: string }).note && (
                    <>
                      <br />
                      {(space as { note?: string }).note}
                    </>
                  )}
                </p>
              </div>
            </article>
          ))}
        </div>
      </div>
    </div>
  </section>

  <script is:inline>
    (function () {
      const container = document.getElementById('spaces-scroll')
      const prevBtn = document.getElementById('spaces-prev')
      const nextBtn = document.getElementById('spaces-next')
      if (!container || !prevBtn || !nextBtn) return
      const card = container.querySelector('.spaces-card')
      const gap = 24
      const scrollAmount = (card ? card.offsetWidth + gap : 304)

      prevBtn.addEventListener('click', () => {
        container.scrollBy({ left: -scrollAmount, behavior: 'smooth' })
      })
      nextBtn.addEventListener('click', () => {
        container.scrollBy({ left: scrollAmount, behavior: 'smooth' })
      })
    })()
  </script>

  <!-- Les prochains événements – Citadel Garden style -->
  <section id="events" class="py-24 md:py-32 px-10 sm:px-16 lg:px-24 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto">
      <div class="text-center mb-20 opacity-0" animate-fade-in-up>
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-normal text-black tracking-tight mb-8">
          {t.events.allTitle}
        </h2>
        <a
          href={getLocalizedPath('/events/', lang as 'fr' | 'en')}
          class="inline-block text-sm text-black/60 hover:text-black transition-colors font-normal underline underline-offset-4"
        >
          {t.events.viewAllLink}
        </a>
      </div>

      <div class="space-y-16 opacity-0" animate-fade-in-up>
        {events.map((event) => (
          <article class="flex flex-col md:flex-row gap-8 md:gap-12 items-start">
            <div class="w-full md:w-80 flex-shrink-0">
              <div class="aspect-[4/3] bg-neutral-100 overflow-hidden rounded-sm">
                <img
                  src={event.image}
                  alt={event.title}
                  class="w-full h-full object-cover rounded-sm"
                  loading="lazy"
                />
              </div>
            </div>
            <div class="flex-1">
              <p class="text-sm font-normal text-black/50 mb-2">
                {event.date}
              </p>
              <h3 class="text-2xl md:text-3xl font-normal text-black mb-4 tracking-tight">
                {event.title}
              </h3>
              <p class="text-base font-normal text-black/70 leading-relaxed">
                {event.description}
              </p>
            </div>
          </article>
        ))}
      </div>
    </div>
  </section>

  <!-- Channels Section (Suivre le projet) – Citadel Garden style -->
  <section class="py-24 md:py-32 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-normal text-black mb-16 text-center tracking-tight">{t.home.channelsTitle}</h2>
      <div class="space-y-12">
        {t.home.channels.map((item) => {
          const url = 'href' in item ? item.href : undefined
          const isExternal = url && String(url).startsWith('http')
          return url ? (
            <a
              href={url}
              class="block group focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-black/20 focus-visible:ring-offset-2"
              {...(isExternal && { target: '_blank', rel: 'noopener noreferrer', 'aria-label': `${item.title} (opens in new tab)` })}
            >
              <div class="flex items-start gap-6 pb-6 border-b border-black/10 group-hover:border-black/30 transition-colors">
                <div class="flex-1">
                  <h3 class="text-xl md:text-2xl font-normal text-black mb-2 group-hover:text-black/80 transition-colors">{item.title}</h3>
                  <p class="text-base font-normal text-black/70 leading-relaxed">{item.description}</p>
                </div>
                <svg class="w-5 h-5 text-black/40 group-hover:text-black/60 transition-colors flex-shrink-0 mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </a>
          ) : (
            <div class="flex items-start gap-6 pb-6 border-b border-black/10">
              <div class="flex-1">
                <h3 class="text-xl md:text-2xl font-normal text-black mb-2">{item.title}</h3>
                <p class="text-base font-normal text-black/70 leading-relaxed">{item.description}</p>
              </div>
            </div>
          )
        })}
      </div>
    </div>
  </section>

  <!-- CTA – Citadel Garden style -->
  <section class="py-24 md:py-32 bg-[#285230] text-white">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <h2 class="text-4xl md:text-5xl lg:text-6xl font-normal mb-6 tracking-tight">{t.home.ctaTitle}</h2>
      <p class="text-xl md:text-2xl font-normal text-white/90 mb-10">{t.home.ctaDescription}</p>
      <a
        href={getLocalizedPath('/newsletter', lang as 'fr' | 'en')}
        class="inline-block text-base text-white/80 hover:text-white transition-colors font-normal underline underline-offset-4"
      >
        {t.home.ctaButton}
      </a>
    </div>
  </section>
</Layout>
