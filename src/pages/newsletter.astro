---
import Layout from '~/layouts/Layout.astro'
import NewsletterForm from '~/components/NewsletterForm.astro'
import { createWebPageSchema } from '~/utils/schema'
import { getTranslations as getI18nTranslations } from '~/i18n/utils'

const lang = Astro.currentLocale || 'fr'
const t = getI18nTranslations(lang as 'fr' | 'en')

const pageSchema = createWebPageSchema({
  name: t.pages.newsletterPage.heroTitle,
  url: Astro.url.toString(),
  description: t.pages.newsletterPage.heroSubtitle,
})
---

<Layout
  title={`${t.pages.newsletterPage.heroTitle} – LAOM`}
  description={t.pages.newsletterPage.heroSubtitle}
  seo={{ ldJSON: pageSchema }}
>
  <section class="relative min-h-[60vh] flex items-center justify-center overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0 z-0">
      <img
        src="/images/laom/LAOM BATIMENT PAILLE.webp"
        alt="Bâtiment en paille porteuse à LAOM"
        class="absolute inset-0 w-full h-full object-cover"
        loading="eager"
      />
      <!-- Gradient overlay for text readability -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 via-black/40 to-black/50"></div>
    </div>
    
    <!-- Content -->
    <div class="relative z-10 max-w-3xl mx-auto px-10 sm:px-16 lg:px-24 text-center">
      <span class="block text-xs font-light tracking-[0.2em] uppercase text-white/80 mb-4">
        {t.footer.newsletterTitle}
      </span>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-light text-white mb-4 tracking-tight drop-shadow-lg">
        {t.pages.newsletterPage.heroTitle}
      </h1>
      <p class="text-lg md:text-xl font-light text-white/90 leading-relaxed drop-shadow-sm">
        {t.pages.newsletterPage.heroSubtitle}
      </p>
    </div>
  </section>

  <!-- Newsletter Form (Top) -->
  <section class="py-8 md:py-12 bg-white">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="bg-[#285230] rounded-lg md:rounded-xl p-6 md:p-8 lg:p-10">
        <NewsletterForm variant="light" />
      </div>
    </div>
  </section>

  <!-- What is LAOM -->
  <section class="py-12 md:py-16 bg-[#F3EEDC]">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-normal text-black mb-6">{t.pages.newsletterPage.whatIsTitle}</h2>
      <p class="text-lg md:text-xl font-normal text-black/80 leading-relaxed">
        {t.pages.newsletterPage.whatIsDescription}
      </p>
    </div>
  </section>

  <!-- Photos du lieu -->
  <section class="py-12 md:py-16 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-2xl md:text-3xl font-normal text-black mb-6">Quelques photos du lieu</h2>
      <div class="grid gap-6 md:grid-cols-12">
        <!-- Première rangée -->
        <div class="md:col-span-7">
          <div class="aspect-[16/10] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/vue aeriene laom.webp"
              alt="Vue aérienne de LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-5">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/LAOM ACCUEIL.webp"
              alt="Espace d'accueil à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-4">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/LAOM BATIMENT PAILLE.webp"
              alt="Bâtiment en paille porteuse à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-4">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/LAOM POTAGER.webp"
              alt="Le potager à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-4">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/Oasis-La-Margue-1.webp"
              alt="L'oasis de La Margue à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <!-- Deuxième rangée -->
        <div class="md:col-span-6">
          <div class="aspect-[4/3] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/Jardin laom.webp"
              alt="Le jardin à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-6">
          <div class="aspect-[4/3] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/WhatsApp Image 2023-12-06 at 23.54.48.webp"
              alt="Paysage agricole à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-4">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/LAOM SALLE.webp"
              alt="La salle à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-4">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/LAOM-FERME CBD.webp"
              alt="La ferme CBD à LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
        <div class="md:col-span-4">
          <div class="aspect-[4/5] overflow-hidden rounded-sm border border-black/10 bg-neutral-100">
            <img
              src="/images/laom/vue aeriene laom2.webp"
              alt="Vue aérienne de LAOM"
              class="h-full w-full object-cover rounded-sm"
              loading="lazy"
            />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Dimensions -->
  <section class="py-24 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-normal text-black mb-12">{t.pages.newsletterPage.dimensionsTitle}</h2>
      <div class="grid gap-8 md:grid-cols-2">
        {t.pages.newsletterPage.dimensions.map((dimension) => (
          <div class="border-b border-black/10 pb-8 last:border-b-0 md:last:border-b md:border-b-0">
            <h3 class="text-xl md:text-2xl font-normal text-black mb-3">{dimension.title}</h3>
            <p class="text-base md:text-lg font-normal text-black/70 leading-relaxed">{dimension.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Content -->
  <section class="py-24 bg-[#F3EEDC]">
    <div class="max-w-5xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-normal text-black mb-8">{t.pages.newsletterPage.newsletterContentTitle}</h2>
      <ul class="space-y-4">
        {t.pages.newsletterPage.newsletterContent.map((item) => (
          <li class="text-lg font-normal text-black/80 leading-relaxed flex items-start gap-3">
            <span class="text-black/40 mt-2 flex-shrink-0">•</span>
            <span>{item}</span>
          </li>
        ))}
      </ul>
    </div>
  </section>

  <!-- Stats -->
  <section class="py-24 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <h2 class="text-3xl md:text-4xl font-normal text-black mb-12 text-center">{t.pages.newsletterPage.statsTitle}</h2>
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {t.pages.newsletterPage.stats.map((stat) => (
          <div class="text-center">
            <div class="text-4xl md:text-5xl font-normal text-black mb-2">{stat.value}</div>
            <div class="text-sm font-normal text-black/60 uppercase tracking-wider mb-1">{stat.label}</div>
            <div class="text-base font-normal text-black/70">{stat.description}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Newsletter Form -->
  <section class="py-24 md:py-32 bg-[#F3EEDC]">
    <div class="max-w-6xl mx-auto px-10 sm:px-16 lg:px-24">
      <div class="bg-[#285230] rounded-lg md:rounded-xl p-8 md:p-12 lg:p-16">
        <NewsletterForm variant="light" />
      </div>
    </div>
  </section>
</Layout>
