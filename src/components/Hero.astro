---
import { getTranslations } from '~/i18n/utils'

const lang = Astro.currentLocale || 'fr'
const t = getTranslations(lang as 'fr' | 'en')
---

<section id="home" class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Image with natural fallback -->
  <div class="absolute inset-0 z-0">
    <!-- Natural gradient background as fallback (forest/rural colors) -->
    <div class="absolute inset-0 bg-gradient-to-br from-[#2d5016] via-[#3a6030] to-[#1a3320]"></div>
    <!-- Image overlay -->
    <div class="absolute inset-0 bg-cover bg-center" style="background-image: url('/images/hero-bg.jpg'); background-position: center; background-size: cover;">
      <!-- Gradient overlay for text readability (inspired by Our Habitas) -->
      <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/30 to-black/50"></div>
    </div>
    <!-- Additional natural overlay -->
    <div class="absolute inset-0 bg-[#2d5016]/10"></div>
  </div>

  <!-- Content - Inspired by Our Habitas hero layout -->
  <div class="relative z-20 text-center px-6 lg:px-8 max-w-5xl mx-auto opacity-0" animate-fade-in-up>
    <!-- Location tag (like Our Habitas) -->
    <p class="text-sm md:text-base font-light tracking-[0.2em] text-white/80 mb-6 uppercase">
      Aveyron, France
    </p>
    
    <!-- Main title -->
    <h1 class="text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-light tracking-tight text-white mb-8 leading-[0.95]">
      {t.hero.title}
    </h1>
    
    <!-- Subtitle -->
    <p class="text-xl md:text-2xl lg:text-3xl font-light text-white/95 mb-6 tracking-wide max-w-3xl mx-auto">
      {t.hero.subtitle}
    </p>
    
    <!-- Description -->
    <p class="text-lg md:text-xl text-white/85 mb-12 max-w-2xl mx-auto font-light leading-relaxed">
      {t.hero.description}
    </p>
    
    <!-- CTA Buttons - Minimal elegant style -->
    <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
      <a 
        href="#experience" 
        class="px-10 py-4 bg-white text-black font-light tracking-[0.15em] hover:bg-white/95 hover:scale-[1.02] transition-all duration-300 uppercase text-sm min-w-[180px] text-center"
      >
        {t.hero.cta.explore}
      </a>
      <a 
        href="#contact" 
        class="px-10 py-4 border border-white/80 text-white font-light tracking-[0.15em] hover:bg-white/10 hover:border-white transition-all duration-300 uppercase text-sm min-w-[180px] text-center"
      >
        {t.hero.cta.contact}
      </a>
    </div>
  </div>

  <!-- Scroll Indicator -->
  <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 z-20 animate-bounce">
    <svg class="w-6 h-6 text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
    </svg>
  </div>
</section>
